generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String
  phone    String
  password String
  salt     String

  histories History[]
}

model History {
  id          String           @id @default(uuid())
  result      PredictionResult
  imgUrl      String
  confidence  Float
  predictedAt DateTime
  user        User             @relation(fields: [userId], references: [id])
  userId      String
}

enum PredictionResult {
  NORMAL
  CATARACT
}
